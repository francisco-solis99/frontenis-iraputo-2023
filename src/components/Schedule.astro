---
import SchduleItem from './SchduleItem.astro';

const schedule = [
  {
    start: '7:30 am',
    title: '👋 Inaguración',
    subtitle: 'Hora receptiva para dar la bienvenida a los participantes'
  },
  {
    start: '8:20 am - 14:00 pm',
    title: '🎾 Fase de Grupos',
    subtitle: 'Inicio de la fase de grupos pactada. Doble eliminación en esta fase.'
  },
  {
    start: '14:00 pm - 15:00 pm ',
    title: '🔥 Eliminatorias',
    subtitle: 'En este horario daremos inicio a la fase de eliminatorias'
  },
  {
    start: '15:00 pm - 17:00 pm ',
    title: '💪 Cuartos de Final',
    subtitle: 'En este horario daremos inicio a la fase de cuartos de final'
  },
  {
    start: '17:00 pm - 18:00 pm',
    title: '🪙 Semifinales',
    subtitle: 'En este horario daremos inicio a las semifinales'
  },
  {
    start: '19:00 pm',
    title: '🥇 Gran Final del Torneo',
    subtitle: 'Damos paso a la final'
  }
];

---

<table class="w-full border-4 border-tournment-yellow-200 bg-tournment-green-300">
  <tbody>
    {
      schedule.map(item => {
        return (
          <tr class="border-b-2 border-tournment-yellow-200">
            <td class="px-8 py-10">
              <SchduleItem {...item}/>
            </td>
          </tr>
        );
      })
    }
  </tbody>
</table>
