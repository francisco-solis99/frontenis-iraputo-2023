---
import '../global.css';

export interface Props {
	dark: boolean,
	title: string,
	description: string
}

const { title, description, dark = true } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class:list={[{ 'bg-tournment-dark-100': dark }, 'scroll-smooth']}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description}>
		<link rel="stylesheet" href="">
		<title>{title}</title>
	</head>
	<body class="bg-tournment-dark-100 text-white">
			<slot />
	</body>
</html>
