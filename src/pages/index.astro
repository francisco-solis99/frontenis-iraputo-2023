---
// Layout
import Layout from '@layouts/Layout.astro';

// Components
import GreenBackground from '@components/GreenBackground.astro';
import Header from '@components/Header.astro';
import Hero from '@components/Hero.astro';
import FloatIcons from '@components/FloatIcons.astro';
import Lines from '@components/Lines.astro';
import Schedule from '@components/Schedule.astro';
import SponsorsList from '@components/SponsorsList.astro';
import Footer from '@components/Footer.astro';

---

<Layout
	title="Torneo Frontenis Irapuato 2023"
	description="Primer Torneo Frontenis Irapuato en conmemoración al 479° Aniversario de la Fundación de la Ciudad de Irapuato"
	dark={true}
>
	<GreenBackground>
		<Header />
		<Hero/>
		<FloatIcons/>
		<Lines/>
	</GreenBackground>

	<section class="my-24">
		<div class="container">
			<hgroup class="mb-12 text-center">
				<h2 id="agenda" class="py-3 text-4xl sm:text-6xl font-black text-white">
					<span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-200 via-yellow-300 to-yellow-100">
						Agenda
					</span>
				</h2>

				<p class="mt-1 font-bold sm:text-lg">1° Torneo de las Fresas.</p>
			</hgroup>
			<Schedule/>
			<p class="mt-5 opacity-80">Los horarios de la competición son aproximados, puesto que algunos partidos pueden tener un rango menor de duración al acordado, 20 minutos entre cada justa deportiva, con 5 minutos límite para el reconocimiento de cancha.</p>
		</div>
	</section>

	<section class="my-24">
		<div class="container">
			<h2 id='reglas' class='py-3 text-4xl font-black text-center text-white sm:text-6xl'>
				<span class='text-transparent bg-clip-text bg-gradient-to-r from-yellow-200 via-yellow-300 to-yellow-100'>Reglas</span>
			</h2>
		</div>
	</section>

	<section class="my-24">
		<div class="container">
			<h2 id='patrocinadores' class='py-3 text-4xl font-black text-center text-white sm:text-6xl'>
				<span class='text-transparent bg-clip-text bg-gradient-to-r from-yellow-200 via-yellow-300 to-yellow-100'>Patrocinadores</span>
			</h2>
			<div class="mt-10">
				<SponsorsList/>
			</div>
		</div>
	</section>

	<section class="my-24">
		<div class="container">
			<h2 id='premios' class='py-3 text-4xl font-black text-center text-white sm:text-6xl'>
				<span class='text-transparent bg-clip-text bg-gradient-to-r from-yellow-200 via-yellow-300 to-yellow-100'>Premios</span>
			</h2>
		</div>
	</section>

	<Footer />
</Layout>
